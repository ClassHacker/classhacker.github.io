{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "ignorePatterns": ["**/*.txt"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "semi": [
            "error",
            "always"
        ]
    }
}